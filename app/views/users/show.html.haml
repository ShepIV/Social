.container
  .row
    .col-sm-3
      .col-sm-9
      / resumt
      .panel.panel-default
        .panel-heading.resume-heading
          .row
            .col-lg-12
              .col-xs-12.col-sm-4
                = image_tag("#{@user.profile.avatar.url}", height: 150)
    .col-xs-12.col-sm-8
      %ul.list-group
        %li.list-group-item #{@user.profile.first_name}
        %li.list-group-item #{@user.profile.last_name}
        %li.list-group-item #{@user.profile.interests}
        %li.list-group-item #{@user.profile.bd}
        %li.list-group-item
          %i.fa.fa-phone
          #{@user.profile.telephone}
        %li.list-group-item
          %i.fa.fa-envelope
          #{@user.email}
        %li.list-group-item #{@user.profile.about}

        = link_to 'edit', edit_user_path