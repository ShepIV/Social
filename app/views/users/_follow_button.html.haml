- if current_user.follows?(user)
  = link_to('Unfollow', unfollow_user_path(user), method: :post, remote: true, class: 'btn-primary btn-sm pull-left', style: 'font-weight: bold')
- else
  = link_to('Follow', follow_user_path(user), method: :post, remote: true, class: 'btn-primary btn-sm btn-hover pull-left', style: 'font-weight: bold')
