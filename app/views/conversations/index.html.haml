.row
  .col-md-9
    %ul#conversations-list
      - @conversations.each do |conversation|
        = render 'conversations/conversation', conversation: conversation, user: current_user
  .col-md-3
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Users
      .panel-body
        %ul
          - @users.each do |user|
            %li= link_to "#{user.profile_first_name} #{user.profile_last_name}" , user_conversations_path(user_id: user), remote: true, method: :post
